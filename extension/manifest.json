{
	"manifest_version": 2,

	"name": "Password Peek",
	"description": "Temporarily enables the user to see the contents of a password field.",
	"homepage_url": "http://www.passwordpeek.com",
	"version": "0.9",

	"icons": {
		"16": "icons/reveal.png",
		"48": "icons/48.png",
		"128": "icons/128.png"
	},

	"background": { 
		"scripts": ["background.js"] 
	},

	"browser_action": {
		"name": "Password Peek",
		"default_title": "Click to reveal passwords",
		"default_icon": "icons/reveal.png"
	},

	"commands": {
		"_execute_browser_action": {
			"suggested_key": {
				"default": "Ctrl+Shift+K",
				"mac": "MacCtrl+Shift+K"
			}
		}
	},

	"permissions": [
		"tabs",
		"http://*/*",
		"https://*/*"
	],

	"minimum_chrome_version": "4.0",
	"incognito": "split",
	"offline_enabled": true
}